{
  "name": "stylable-examples",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf \"./packages/*/dist\"",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable",
    "lint": "eslint . -f codeframe",
    "prestart": "yarn build",
    "start": "yarn start:app",
    "start:app": "yarn workspace simple-app start",
    "start:components": "yarn workspace component-lib start",
    "test": "yarn lint && yarn build",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^4.8.0",
    "@stylable/core": "^4.7.4",
    "@stylable/webpack-plugin": "^4.7.4",
    "@types/node": "16",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "~4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "license": "MIT",
  "private": true
}
