{
  "name": "stylable-examples",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "prebuild": "yarn lint",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . -f codeframe",
    "start": "yarn workspace simple-app start",
    "start:lib": "yarn workspace component-lib start",
    "typecheck": "tsc --noEmit",
    "test": "yarn typecheck && yarn lint",
    "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@stylable/core": "^3.11.14",
    "@stylable/webpack-plugin": "^3.11.14",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/node": "12",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.2",
    "lerna": "^4.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "~4.1.5",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "license": "MIT",
  "private": true
}
