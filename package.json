{
  "name": "stylable-examples",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf \"./packages/*/dist\"",
    "build": "npm run build:typescript && npm run build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "npm run -ws build:stylable",
    "lint": "eslint .",
    "prestart": "npm run build",
    "start": "npm run start:app",
    "start:app": "npm run -w simple-app start",
    "start:components": "npm run -w component-lib start",
    "test": "npm run lint && npm run build",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^5.2.0",
    "@stylable/webpack-plugin": "^5.2.0",
    "@types/node": "16",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "typescript": "~4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "license": "MIT",
  "private": true
}
